<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="thin-border-wrapper padding-5">
        <h4>Please rate your experience with the work <%=@offer_user.first_name%> provided.
          This helps your neighbors see the good work people are spreading!</h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <%= render "layouts/ratings", :@user => @user,
                                    :@offer_user => @offer_user,
                                    :@rating => @rating %>
    </div>
  </div>

</div>
