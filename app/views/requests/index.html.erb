<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="thin-border-wrapper padding-5">
        <%= form_tag requests_path, :method => "get", :id => "search_form" do %>
          <%= label_tag :search, "Search Requests", class: "display-block" %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :name => nil %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <h1>Community Requests</h1>
      <% @requests.each do |request| %>
        <%= render "layouts/request_summary", :request => request %>
      <% end %>
    </div>
  </div>
</div>
